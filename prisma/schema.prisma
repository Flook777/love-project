generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ตาราง User (เก็บข้อมูลลูกค้า)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  projects      Project[] // โปรเจกต์ที่ลูกค้าสร้าง
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// ตาราง Account (สำหรับเก็บข้อมูล Login จาก Line/Google)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// ตาราง Session (สำหรับเก็บสถานะการ Login)
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ตาราง Project (เว็บเซอร์ไพรส์ที่ลูกค้าสร้าง)
model Project {
  id          String   @id @default(cuid())
  name        String   @default("My Surprise")
  slug        String   @unique // URL ของเว็บ เช่น /p/love-you-3000
  templateId  String   // ธีมที่เลือก
  customData  Json?    // ข้อมูลรูปภาพและข้อความที่ลูกค้าแก้ (เก็บเป็น JSON)
  isPublished Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
